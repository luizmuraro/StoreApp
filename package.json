{
  "name": "shoppingapp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest --transformIgnorePatterns 'node_modules/(?!@toolz/allow)/' --env=jsdom",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.17.4",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/native-stack": "^6.6.2",
    "add": "^2.0.6",
    "axios": "^0.27.2",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-fast-image": "^8.5.11",
    "react-native-safe-area-context": "^4.2.5",
    "react-native-screens": "^3.13.1",
    "react-redux": "^8.0.1",
    "redux": "^4.2.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.4.1",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-modules-commonjs": "^7.18.0",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@testing-library/react-native": "^9.1.0",
    "@types/jest": "26.0.15",
    "@types/react-native": "^0.67.3",
    "@types/react-redux": "^7.1.24",
    "@types/react-test-renderer": "^17.0.1",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.9",
    "@types/redux-thunk": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-jest": "^28.1.0",
    "eslint": "^7.32.0",
    "jest": "^28.1.0",
    "metro-react-native-babel-preset": "^0.67.0",
    "react-native-testing-library": "^6.0.0",
    "react-test-renderer": "17.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "jest": {
    "preset": "react-native",
    "verbose": true,
    "setupFiles": [
      "./configs/setupTests.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "/.svg$": "<rootDir>/configs/mocks/svgMock.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!react-native)/",
      "<rootDir>/node_modules/(?!jadd-components)/",
      "<rootDir>/node_modules/(?!react-navigation)/",
      "<rootDir>/node_modules/(?!react-native-snap-carousel)/",
      "<rootDir>/node_modules/(?!react-native-swiper)/",
      "<rootDir>/node_modules/(?!pagarme-api)/",
      "<rootDir>/node_modules/(?!react-native-languages)/",
      "<rootDir>/node_modules/(?!react-native-safe-area-view)/",
      "<rootDir>/node_modules/(?!react-native-device-info)/",
      "<rootDir>/node_modules/(?!react-native-fs)/",
      "<rootDir>/node_modules/(?!@react-native-community/async-storage)/",
      "<rootDir>/node_modules/(?!react-native-screens)/",
      "<rootDir>/node_modules/(?!react-navigation-stack)/",
      "<rootDir>/node_modules/(?!react-native-tab-view)/",
      "<rootDir>/node_modules/(?!react-native-code-push)/",
      "<rootDir>/node_modules/(?!@iconscout/react-native-unicons)/",
      "<rootDir>/node_modules/(?!react-native-svg)/"
    ]
  }
}
